<head>
    <!DOCTYPE html>
    <title>NationBuilder Shaker</title>

    <style>
        div.bar {
            display: inline-block;
            width: 100px;
            height: 200px;
            background-color: black;
            margin-left: 10px;
            margin-righ: 10px;
        }
    </style>

    <script src="http://js.pusher.com/2.1/pusher.min.js" type="text/javascript"></script>
    <script src= "https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript">
      // Enable pusher logging - don't include this in production
      Pusher.log = function(message) {
          if (window.console && window.console.log) {
              window.console.log(message);
          }
      };

      var pusher = new Pusher('2e26a91c1f302424fac6');
      var channel = pusher.subscribe('test_channel');
      channel.bind('my_event', function(data) {
        var playerScores = jQuery.parseJSON(data.message);
        var player1Bar = $('#player1');
        var player2Bar = $('#player2');
        player1Bar.height(player1Bar.height() * playerScores.player1) ;
        player2Bar.height(player2Bar.height() * playerScores.player2) ;
      });
    </script>
</head>

<div class="bar" id='player1'></div>
<div class="bar" id='player2'></div>

